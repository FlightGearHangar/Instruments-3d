        <action>
            <name>mode increment</name>
            <button>0</button>
            <x>-18</x>
            <y>-20</y>
            <w>12</w>
            <h>8</h>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/clock/m877/mode</property>
                <step>1</step>
                <min>0</min>
                <max>4</max>
                <wrap>true</wrap>
            </binding>
        </action>

        <action>
            <name>set time</name>
            <button>0</button>
            <x>-5</x>
            <y>-20</y>
            <w>9</w>
            <h>8</h>
            <binding>
            </binding>
        </action>

        <action>
            <name>increment time</name>
            <button>0</button>
            <x>5</x>
            <y>-20</y>
            <w>12</w>
            <h>8</h>
            <binding>
            </binding>
        </action>

    </actions>

</PropertyList>