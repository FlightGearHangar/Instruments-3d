<!--Davtron M877 Chronometer-->

<PropertyList>

    <name>M877 hotspots</name>
    <w-base>60</w-base>
    <h-base>60</h-base>
    <w>60</w>
    <h>60</h>

    <layers>
    </layers>

    <actions>
